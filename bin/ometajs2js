#!/usr/bin/env node
var fs = require('fs');

require('coa').Cmd()
    .name(process.argv[1])
    .helpful()
    .opt() // add some option
        .name('version')
        .title('Version')
        .short('v')
        .long('version')
        .only()
        .flag()
        .act(function(opts) {
            // return message as result of action
            var package = require('fs').readFileSync(__dirname +
                                                     '/../package.json');
            return JSON.parse(package).version;
        })
        .end()
    .opt()
        .name('input').title('Input file (default: stdin)')
        .short('i').long('input')
        .def(null)
        .act(function(options) {
          if (options.input === null) {
            options.input = process.stdin;
            process.stdin.resume();
          }
        })
        .end()
    .opt()
        .name('output').title('Output file (default: stdout)')
        .short('o').long('output')
        .def(process.stdout)
        .end()
    .opt()
        .name('root').title('Path to root module (default: ometajs)')
        .long('root')
        .def('ometajs')
        .end()
    .act(function(options) {
      require('../lib/ometajs').run(options);
    })
    .run();
